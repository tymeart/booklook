{
  "name": "BookLook",
  "version": "1.0",
  "description": "Look up book summaries",
  "permissions": [
    "declarativeContent",
    "https://www.goodreads.com/",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
